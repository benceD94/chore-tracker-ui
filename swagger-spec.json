    "/households/{householdId}/registry": {
      "get": {
        "description": "Get chore completion registry entries with optional filtering by time period and user",
        "operationId": "RegistryController_findAll",
        "parameters": [
          {
            "name": "householdId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "required": false,
            "in": "query",
            "description": "Filter by time period",
            "schema": {
              "enum": [
                "today",
                "yesterday",
                "thisWeek",
                "lastWeek",
                "thisMonth",
                "all"
              ],
              "type": "string"
            }
          },
          {
            "name": "userId",
            "required": false,
            "in": "query",
            "description": "Filter by user UID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "description": "Maximum number of results (default: 50)",
            "schema": {
              "minimum": 1,
              "default": 50,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Registry entries retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
